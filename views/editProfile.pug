extends layouts/main

block content
    .form-container
        form(action=`/users${routes.editProfile}`, method="post", enctype="multipart/form-data")
            .fileUpload
                label(for="avatar") Avatar
                input(type="file", id="avatar", name="avatar", accept="image/*")
            input(type="text", name="name", value=loggedUser.name, placeholder="Name")
            input(type="email", name="email", value=loggedUser.email, placeholder="Email")
            input(type="submit", value="Update Profile")